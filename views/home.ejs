<div class="ui purple error posting form segment">
    <div class="ui hidden error message">
    </div>
    <div class="purple-text title">
        What's on your mind?
    </div>
    <div class="field" style="padding-top:10px;">
        <input type="text" name="title" placeholder="Title">
    </div>
    <div class="field">
        <textarea name="body" placeholder="What do you want to share?"></textarea>
    </div>
    <div class="field">
        <div class="ui purple posting submit button">
            Fritt
        </div>
    </div>
</div>

<!-- iterate through the posts backwards (most recent -> oldest) -->
<% for (var i=posts.length-1; i >= 0; i--) { %>
    <%= include post.ejs %>
<% } %>